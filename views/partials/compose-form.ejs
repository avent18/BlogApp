<form action="/compose" method="POST">
  <div class="form-group">
    <label for="postTile">Title</label>
    <input type="text" class="form-control" name="postTitle" placeholder="Enter Title" autofocus required>
  </div>

  <div class="form-group">
    <label for="postBody">Post</label>
    <textarea class="form-control" name="postBody" rows="3" placeholder="Enter Content" autofocus required></textarea>
  </div>

  <button type="submit" class="btn btn-default">Publish</button>
</form>